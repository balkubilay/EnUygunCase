<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EnUygunCase" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Typography -->
        <item name="android:fontFamily">@font/inter_font_family</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:textColorHint">@color/medium_gray</item>
    </style>

    <style name="Theme.EnUygunCase" parent="Base.Theme.EnUygunCase" />
    
    <!-- Full Screen Theme -->
    <style name="Theme.EnUygunCase.FullScreen" parent="Base.Theme.EnUygunCase">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextStyle.Inter.Bold" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TextStyle.Inter.Medium" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    
    <style name="TextStyle.Inter.Regular" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/medium_gray</item>
    </style>
</resources>