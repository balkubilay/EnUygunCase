<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/cart_item_background"
    android:padding="16dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/light_gray"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <!-- Product Info Container -->
    <LinearLayout
        android:id="@+id/product_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/quantity_controls_container"
        app:layout_constraintStart_toEndOf="@id/product_image"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Product Title -->
        <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Macbook Pro"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Price Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Current Price -->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1749 TL"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_regular" />

            <!-- Original Price -->
            <TextView
                android:id="@+id/product_original_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="1749 TL"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:textStyle="normal"
                android:fontFamily="@font/inter_regular" />

        </LinearLayout>

    </LinearLayout>

    <!-- Quantity Controls Container -->
    <LinearLayout
        android:id="@+id/quantity_controls_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Decrease Button -->
        <ImageView
            android:id="@+id/decrease_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_minus"
            app:tint="@color/black" />

        <!-- Quantity Text -->
        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold" />

        <!-- Increase Button -->
        <ImageView
            android:id="@+id/increase_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_plus"
            app:tint="@color/black" />

        <!-- Trash Icon -->
        <ImageView
            android:id="@+id/remove_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/red" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 