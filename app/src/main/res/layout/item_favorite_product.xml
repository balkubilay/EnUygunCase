<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_margin="8dp"
    android:background="@drawable/product_item_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Product Image Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="12dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/product_image_background"
            android:scaleType="centerCrop"
            android:src="@drawable/macbook_pro_image" />

        <!-- Heart Icon (Favorited) -->
        <LinearLayout
            android:id="@+id/heart_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_margin="1dp"
            android:background="@drawable/favorite_button_background_favorite"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_heart_filled"
                android:tint="#FF4444" />
        </LinearLayout>
    </FrameLayout>

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Product Name -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Macbook Pro"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Product Description -->
        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="MacBook Pro 2021 with mi..."
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            android:fontFamily="@font/inter_regular"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Spacer to push price to bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Price and Cart Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Price -->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1749 TL"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_regular" />

            <!-- Add to Cart Button (when not in cart) -->
            <LinearLayout
                android:id="@+id/add_to_cart_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/add_to_cart_button_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_plus"
                    android:tint="@color/black" />
            </LinearLayout>

            <!-- Quantity Controls (when in cart) -->
            <LinearLayout
                android:id="@+id/quantity_controls"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/quantity_controls_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp"
                android:visibility="gone">

                <!-- Decrease Button -->
                <ImageView
                    android:id="@+id/decrease_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/ic_minus"
                    android:tint="@color/black" />

                <!-- Quantity Text -->
                <TextView
                    android:id="@+id/quantity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold" />

                <!-- Increase Button -->
                <ImageView
                    android:id="@+id/increase_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:padding="2dp"
                    android:src="@drawable/ic_plus"
                    android:tint="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout> 