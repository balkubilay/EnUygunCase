<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/product_item_background"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/product_image_background"
        android:scaleType="centerCrop"
        tools:src="@drawable/macbook_pro_image" />

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Product Name -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Macbook Pro"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            tools:text="Macbook Pro" />

        <!-- Product Description -->
        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="MacBook Pro 2021 with mi..."
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            tools:text="MacBook Pro 2021 with mini-LED display" />
    </LinearLayout>

    <!-- Price Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <!-- Current Price -->
        <TextView
            android:id="@+id/current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1749 TL"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            tools:text="1749 TL" />

        <!-- Original Price (Strikethrough) -->
        <TextView
            android:id="@+id/original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1749 TL"
            android:textColor="@color/medium_gray"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            tools:text="1749 TL" />
    </LinearLayout>
</LinearLayout> 